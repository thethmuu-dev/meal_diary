<% content_for :title do %>
  Edit Your Profile
<% end %>

<div class="columns is-centered">
  <div class="column is-one-third">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <% if current_user.image.present? %>
        <div class="field">
          <figure class="image is-128x128 mb-3 mx-auto">
            <%= image_tag(current_user.image.url, class: 'is-rounded') %>
          </figure>
          <%= f.label :remove_image do %>
            <%= f.check_box :remove_image %>
            <span class="ml-1">Remove Image</span>
          <% end %>
        </div>
      <% end %>

      <div class="field">
        <%= f.label "Profile", class: "label" %>
        <div class="file">
          <%= f.label :image, class: "file-label" do %>
            <%= f.file_field :image, class: "file-input" %>
            <%= f.hidden_field :image_cache %>
            <span class="file-cta">
              <svg width="17px" viewBox="0 0 24 24" stroke="currentColor" fill-opacity="0" stroke-opacity="0.8">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
              </svg>
              <span class="file-label ml-1">
                Change Profile
              </span>
            </span>
          <% end %>
        </div>
      </div>

      <div class="field">
        <%= f.label :username, class: "label" %>
        <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "input" %>
      </div>
      
      <div class="field">
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, autocomplete: "email", class: "input" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "label" %> <i>(leave blank if you don't want to change it)</i>
        <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
        <% if @minimum_password_length %>
          
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
      </div>

      <div class="field">
        <%= f.label :current_password, class: "label" %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "input" %>
      </div>

      <div class="actions">
        <%= f.submit "Update", class: "button is-primary" %>
      </div>
    <% end %>
  </div>
</div>