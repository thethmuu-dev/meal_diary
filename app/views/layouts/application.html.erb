<!DOCTYPE html>
<html>
  <head>
    <title>MealDiary</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Personal Meal Log and Sharing App">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'shared/header' %> 
    <% if notice.present? %>
      <div class="notification is-link is-light animated fadeIn has-text-centered mb-0"><%= notice %></div>
    <% end %>
    <% if alert.present? %>
      <div class="notification is-link is-light animated fadeIn has-text-centered mb-0"><%= alert %></div>
    <% end %>
    
    <div class="container">
      <% unless current_page?(root_path) || current_page?(new_user_session_path) %>
      <%= link_to :back, class: "button my-3 is-small" do %>
        <svg width="20px" viewBox="0 0 20 20" fill="#00d1b2">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm.707-10.293a1 1 0 00-1.414-1.414l-3 3a1 1 0 000 1.414l3 3a1 1 0 001.414-1.414L9.414 11H13a1 1 0 100-2H9.414l1.293-1.293z" clip-rule="evenodd" />
        </svg>
        <span class="ml-1">Back</span>
      <% end %>
      <% end %>

      <div class="animated fadeIn">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
