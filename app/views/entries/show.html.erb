<% content_for :title do %>
  <%= @entry.meal_type %> &ndash; <%= @entry.created_at.to_s(:nice_date) %>

<% end %>

<div class="columns mt-3 is-centered">
  <div class="column is-one-third">
    <nav class="panel is-primary">
      <p class="panel-heading">
        <%= @entry.meal_type %>
        <% if @entry.category.present? %>
          <span class="tag is-light">
          <%= @entry.category.title %>
          </span>
        <% end %>
      </p>
      
      <div class="panel-block">
        Calories: <%= @entry.calories %>
      </div>

      <div class="panel-block">
        Proteins: <%= @entry.proteins %>
      </div>

      <div class="panel-block">
        Carbohydrates: <%= @entry.carbohydrates %>
      </div>

      <div class="panel-block">
        Fats: <%= @entry.fats %>
      </div>
    </nav>

    <div class="columns is-mobile">
      <div class="column">
        <%= link_to 'Edit', edit_entry_path(@entry), class: "button is-gray" %>
        <%= link_to 'Delete', entry_path(@entry), method: :delete, data: { confirm: "Are you sure?" }, class: "button is-gray" %>
      </div>
    </div>
</div>
</div>
